%ul.list-group
  - conversations.each do |conversation|
    - unless conversation.private?
      %li.list-group-item.d-flex.justify-content-between.align-items-center.conversation
        %p= conversation.name || conversation.id
        .btn-group.float-right{role: 'group'}
          = link_to 'Join', conversation, class: 'btn btn-info btn-sm'
