<h1>Welcome</h1>
<p>Current user id: <%= current_user.id %>. <span>Current user username: <%= current_user.username %></span></p>

<div class="row">
  <div class="">
    <h3>Conversation List</h3>
    <ul class="list-group">
      <% current_user.conversations.each do |conversation| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <p>
            <%= conversation.name || conversation.id %> - <span class="">
              <%= link_to 'See', conversation, class: 'btn btn-primary btn-sm' %>
            </span> <span class="">
              <%= link_to 'Delete', conversation, method: :delete, class: 'btn btn-danger btn-sm' %>
            </span>
          </p>
        </li>
      <% end %>
    </ul>
    <%= link_to 'New chat', new_conversation_path, class: 'btn btn-primary' %>
  </div>
</div>
